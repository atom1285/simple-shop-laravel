@tailwind base;
@tailwind components;
@tailwind utilities;

.btn {
    cursor: pointer;

    @apply text-2xl;
    @apply bg-cta;
    @apply py-3 px-4;

    font-weight: 500;

    transition: all 0.2s ease-in-out;
}

.btn.pill {
    @apply rounded-full;
}

.btn:hover {
    transform: scale(1.05);
}

